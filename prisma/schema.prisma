generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id                Int    @id @default(autoincrement())
  authentication_id String @db.VarChar(36)
  roles             role[]
  tags              tag[]
  goals             goal[]
  email             String @unique @db.VarChar(255)
}

model role {
  id      Int    @id @default(autoincrement())
  user    user   @relation(fields: [user_id], references: [id])
  user_id Int
  name    String @db.VarChar(255)
  icon    String @db.VarChar(255)
}

model goal {
  id          Int             @id @default(autoincrement())
  user        user            @relation(fields: [user_id], references: [id])
  user_id     Int
  summary     String          @db.VarChar(255)
  description String          @db.VarChar(1000)
  deadline    DateTime
  period      period
  tags        goal_tag_join[]
}

model tag {
  id      Int             @id @default(autoincrement())
  user    user            @relation(fields: [user_id], references: [id])
  user_id Int
  name    String          @db.VarChar(25)
  goals   goal_tag_join[]
}

model goal_tag_join {
  goal    goal @relation(fields: [goal_id], references: [id])
  goal_id Int // relation scalar field (used in the `@relation` attribute above)
  tag     tag  @relation(fields: [tag_id], references: [id])
  tag_id  Int

  @@id([goal_id, tag_id])
}

enum period {
  DAY
  WEEK
  MONTH
  QUARTER
  YEAR
}
